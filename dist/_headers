# Headers para GitHub Pages / Netlify
# Configurações de segurança e cache otimizadas para 2025

/*
  # Segurança
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.emailjs.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' data: https:; font-src 'self' https://fonts.gstatic.com; connect-src 'self' https://api.emailjs.com; frame-ancestors 'none'; base-uri 'self'; form-action 'self'
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=(), interest-cohort=()
  Cross-Origin-Opener-Policy: same-origin
  Cross-Origin-Embedder-Policy: require-corp
  
  # Cache para recursos estáticos
  Cache-Control: public, max-age=31536000, immutable

# Assets específicos com cache longo
/assets/*
  Cache-Control: public, max-age=31536000, immutable
  
# JavaScript e CSS com versionamento
*.js
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: application/javascript
  
*.css
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: text/css

# Imagens com cache longo
*.png
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/png
  
*.jpg
*.jpeg
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/jpeg
  
*.webp
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/webp
  
*.svg
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/svg+xml

# HTML com cache menor
*.html
/
  Cache-Control: public, max-age=3600, must-revalidate
  Content-Type: text/html; charset=utf-8
  
# Manifest e service worker
/manifest.json
  Cache-Control: public, max-age=86400
  Content-Type: application/manifest+json
  
/sw.js
/service-worker.js
  Cache-Control: public, max-age=0, must-revalidate
  Content-Type: application/javascript

# Fontes
*.woff2
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: font/woff2
  
*.woff
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: font/woff
  
# Security.txt
/.well-known/security.txt
  Cache-Control: public, max-age=86400
  Content-Type: text/plain

# Robots e sitemap
/robots.txt
  Cache-Control: public, max-age=86400
  Content-Type: text/plain
  
/sitemap.xml
  Cache-Control: public, max-age=86400
  Content-Type: application/xml 