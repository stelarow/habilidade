# Blog API Configuration
# Custom API URL (overrides all other settings)
REACT_APP_BLOG_API_URL=https://your-blog-api.com/api

# Development API URL (fallback for development)
REACT_APP_DEV_API_URL=http://localhost:3000/api

# API Version (optional, adds API-Version header)
REACT_APP_API_VERSION=v1

# Analytics Configuration
# Enable/disable analytics tracking
REACT_APP_ANALYTICS_ENABLED=true

# Analytics endpoint (optional, defaults to internal)
REACT_APP_ANALYTICS_ENDPOINT=https://your-analytics-api.com

# Development/Debug Settings
# Enable debug logging in console
REACT_APP_DEBUG_MODE=false

# Enable React Query devtools
REACT_APP_REACT_QUERY_DEVTOOLS=false

# Performance Monitoring
# Enable performance tracking
REACT_APP_PERFORMANCE_MONITORING=true

# Cache Settings
# Cache duration multiplier (1.0 = default, 2.0 = double cache time)
REACT_APP_CACHE_MULTIPLIER=1.0

# Service Worker
# Enable service worker for caching
REACT_APP_SERVICE_WORKER_ENABLED=true

# Error Reporting
# Sentry DSN (if using Sentry for error tracking)
REACT_APP_SENTRY_DSN=your-sentry-dsn-here

# Feature Flags
# Enable advanced search features
REACT_APP_ADVANCED_SEARCH=true

# Enable social sharing
REACT_APP_SOCIAL_SHARING=true

# Enable reading progress tracking
REACT_APP_READING_PROGRESS=true

# Production Settings
# Enable production optimizations
REACT_APP_PRODUCTION_OPTIMIZATIONS=true

# Enable retry logic for API calls
REACT_APP_API_RETRY_ENABLED=true

# Maximum number of API retries
REACT_APP_API_MAX_RETRIES=3