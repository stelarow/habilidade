{
  "name": "escola-habilidade",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite-react-ssg dev",
    "build": "npm run build:optimize",
    "build:optimize": "vite-react-ssg build && npm run optimize:assets && npm run inject:critical-css && npm run analyze:bundle",
    "build:production": "vite-react-ssg build",
    "lint": "eslint .",
    "preview": "vite preview",
    "deploy": "npm run build:production && git add dist/ && git commit -m \"Deploy: atualiza√ß√£o do build\" && git push origin main",
    "optimize:assets": "echo 'üéØ Otimizando assets...' && npm run optimize:images",
    "optimize:images": "echo 'üñºÔ∏è Imagens j√° otimizadas via Vite'",
    "analyze:bundle": "node scripts/analyze-bundle.js",
    "inject:critical-css": "node scripts/inject-critical-css.js",
    "perf:audit": "lighthouse --only-categories=performance --output=json --output-path=lighthouse-audit.json http://localhost:4173",
    "perf:test": "npm run build && npm run preview & sleep 3 && npm run perf:audit",
    "clean": "rm -rf dist/ node_modules/.vite/",
    "fresh": "npm run clean && npm install && npm run build",
    "functions:dev": "netlify dev",
    "functions:serve": "netlify functions:serve",
    "functions:create": "netlify functions:create",
    "functions:list": "netlify functions:list",
    "functions:invoke": "netlify functions:invoke",
    "functions:invoke:health": "netlify functions:invoke health-check",
    "functions:invoke:contact": "netlify functions:invoke contact-handler --payload '{\"name\":\"Demo User\",\"email\":\"demo@example.com\",\"subject\":\"Demo Subject\",\"message\":\"Demo message\"}'",
    "functions:invoke:logger": "netlify functions:invoke dev-logger --querystring \"type=debug&source=demo&message=Demo log message\"",
    "functions:debug": "NODE_OPTIONS='--inspect' netlify functions:serve"
  },
