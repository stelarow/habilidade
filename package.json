    "test:coverage": "jest --coverage",
    "test:blog": "jest --testPathPattern=src/tests/blog",
    "perf:audit": "lighthouse --only-categories=performance --output=json --output-path=lighthouse-audit.json http://localhost:4173",
    "perf:test": "npm run build && npm run preview & sleep 3 && npm run perf:audit",
    "clean": "rm -rf dist/ node_modules/.vite/",
