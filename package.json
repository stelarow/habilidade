    "functions:list": "netlify functions:list",
    "functions:invoke": "netlify functions:invoke",
    "functions:invoke:health": "netlify functions:invoke health-check",
    "functions:invoke:contact": "netlify functions:invoke contact-handler --payload '{\"name\":\"Test User\",\"email\":\"test@example.com\",\"subject\":\"Test Subject\",\"message\":\"Test message\"}'",
    "functions:invoke:logger": "netlify functions:invoke dev-logger --querystring \"type=debug&source=test&message=Test log message\"",
