    "build:production": "vite-react-ssg build",
    "lint": "eslint .",
    "preview": "vite preview",
    "deploy": "npm run build:production && git add dist/ && git commit -m \"Deploy: atualiza√ß√£o do build\" && git push origin main",
    "test:data": "node src/test-courses.js",
    "test:routes": "node -e \"const routes = ['informatica', 'programacao', 'design-grafico', 'projetista-3d', 'edicao-video', 'marketing-digital', 'inteligencia-artificial', 'business-intelligence']; console.log('‚úÖ Testando rotas dos cursos:'); routes.forEach(slug => console.log(`  ‚úì /cursos/${slug}`)); console.log(`\\nüìä Total: ${routes.length} rotas configuradas`);\"",
